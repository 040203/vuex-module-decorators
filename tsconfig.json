{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2015",
    "moduleResolution": "node",
    "lib": [
      "dom", "es2015"
    ],
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "rootDir": "src",
    "outDir": "dist",
    "sourceRoot": "src",
    "removeComments": false
  },
  "include": [
    "src"
  ],
